package string;

public class AddBinaryStrings {
	
	public static void main(String[] args) {
		String ans=add("10","01");
		System.out.println(ans);
	}
	public static String add(String a, String b) {
		if (a.length() != b.length()) {
			if (a.length() > b.length()) {
				for (int i = 0; i < a.length() - b.length(); i++) {
					b = "0" + b;
				}
			} else {
				for (int i = 0; i < b.length() - a.length(); i++) {
					a = "0" + a;
				}
			}
		}
		String res = "";
		char carry = '0';
		for (int i = a.length() - 1; i >= 0; i--) {
			char ch1 = a.charAt(i);
			char ch2 = b.charAt(i);
			char sum = sum(ch1, ch2, carry);
			carry = carry(ch1, ch2, carry);
			res = sum + "" + res;
		}
		res = carry + res;
		return res;
	}

	private static char sum(char ch1, char ch2, char carry) {
		int a = Integer.parseInt(ch1 + "");
		int b = Integer.parseInt(ch2 + "");
		int c = Integer.parseInt(carry + "");
		if (a + b + c == 0) {
			return '0';
		} else if (a + b + c == 1) {
			return '1';
		} else if (a + b + c == 2) {
			return '0';
		} else {
			return '1';
		}
	}

	private static char carry(char ch1, char ch2, char carry) {
		int a = Integer.parseInt(ch1 + "");
		int b = Integer.parseInt(ch2 + "");
		int c = Integer.parseInt(carry + "");
		if (a + b + c == 0) {
			return '0';
		} else if (a + b + c == 1) {
			return '0';
		} else if (a + b + c == 2) {
			return '1';
		} else {
			return '1';
		}
	}
}
